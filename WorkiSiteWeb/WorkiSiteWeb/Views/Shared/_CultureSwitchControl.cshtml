@{
    var isFr = Url.IsFrench();

    var LanguageSwitcher = new DropDownModel
    {
        Id = DropDownModel.ProfilDD,
        Title = string.Format("FR = {0}", isFr),
        Items = new List<DropDownItem>
		{
			new DropDownItem { DisplayName = "FR", Link = Url.Action(MVC.Home.ChangeCulture("fr", this.Request.RawUrl)) },
            new DropDownItem { DisplayName = "EN", Link = Url.Action(MVC.Home.ChangeCulture("en", this.Request.RawUrl)) }
		}
    };
    @Html.Partial(MVC.Shared.Views._DropDownList, LanguageSwitcher)
}