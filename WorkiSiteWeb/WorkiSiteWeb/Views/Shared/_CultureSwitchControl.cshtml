@{
    var isFr = Url.IsFrench();
    var Current = string.Empty;
    
    if (isFr)
    {
        Current = "flags france";
    }
    else
    {
        Current = "flags royaume-uni";
    }
    
    var LanguageSwitcher = new DropDownModel
    {
        Id = "CultureSwitcher",
        Title = "",
        TitleCss = Current,
        Items = new List<DropDownItem>
		{
			new DropDownItem { DisplayName = "", Css = "flags france", Link = Url.Action(MVC.Home.ChangeCulture("fr")) },
            new DropDownItem { DisplayName = "", Css = "flags royaume-uni", Link = Url.Action(MVC.Home.ChangeCulture("en")) }
		}
    };
    @Html.Partial(MVC.Shared.Views._DropDownList, LanguageSwitcher)
}