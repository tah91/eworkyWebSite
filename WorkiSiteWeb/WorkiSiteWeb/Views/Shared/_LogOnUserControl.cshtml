@if (Request.IsAuthenticated)
{       
    <div class="welcome">
        @{
            var displayName = User.Identity.Name;
			var memberId = 0;
            FormsIdentity ident = User.Identity as FormsIdentity;
            if (ident != null)
            {
				displayName = WebHelper.GetIdentityDisplayName(User.Identity);
				memberId = WebHelper.GetIdentityId(User.Identity);
            }
			var dropDown = new DropDownModel
			{
				Id = DropDownModel.ProfilDD,
                Title = string.Format(Worki.Resources.Views.Home.HomeString.Welcome + " {0} !", displayName),
				Items = new List<DropDownItem>
						{
							new DropDownItem{ DisplayName = Worki.Resources.Views.Profile.ProfileString.MyProfile, Link = Url.Action(MVC.Dashboard.Home.Index())}
						}
			};
			if (User.IsInRole(MiscHelpers.BackOfficeConstants.BackOfficeRole))
			{
				dropDown.Items.Add(new DropDownItem { DisplayName = "bo", Link = Url.Action(MVC.Backoffice.Home.Index()) });
			}
			if (User.IsInRole(MiscHelpers.AdminConstants.AdminRole))
			{
				dropDown.Items.Add(new DropDownItem { DisplayName = Worki.Resources.Views.Shared.SharedString.Admin, Link = Url.Action(MVC.Admin.Sheet.Index()) });
			}
			dropDown.Items.Add(new DropDownItem { DisplayName = Worki.Resources.Views.Shared.SharedString.Deconnect, Link = Url.Action(MVC.Account.LogOff()) });
        }
        @*<div class="loginTitle">
            @Worki.Resources.Views.Home.HomeString.Welcome <b>@displayName</b> !
        </div>*@
		@Html.Partial(MVC.Shared.Views._DropDownList, dropDown)
    </div>
}
else
{
    <div class="loginTitle">@Worki.Resources.Views.Shared.SharedString.FbConnexionText</div>
    <div class="lengthConnexionBox">
        @RazorHelpers.FacebookLogon(Url.Action(MVC.Account.FacebookLogOn()), Worki.Resources.Views.Shared.SharedString.SignIn, "float-left")
        <div class="blue float-left connectEworky">
            @Html.ActionLink(Worki.Resources.Views.Account.AccountString.Login, MVC.Account.LogOn()) | 
            @Html.ActionLink(Worki.Resources.Views.Account.AccountString.Inscription, MVC.Account.Register())
        </div>
    </div>
}
<div class="clear">
</div>
