@model DropDownModel

<dl class="dropdown" id="@Model.Id">
	<dt>
		<a href="#">
			<span class="float-left">@Model.Title</span>
			<span class="float-right dropdown-triangle">▾</span>
			<div class="clear"></div>
		</a>
	</dt>
	<dd>
		<ul>
			@foreach (var item in Model.Items)
			{
				<li><a href="@item.Link" id="@item.Id" class="@item.Css">@item.DisplayName</a></li>	
			}
		</ul>
	</dd>
</dl>