@model Worki.Data.Models.Localisation

    <div id="detailMap">
    </div>

    <script type="text/javascript">
        head.js("http://maps.google.com/maps/api/js?sensor=true&region=FR&callback=initialize", "@Url.VersionedContent(Links.Scripts.WorkiMap_js)");

        function initialize() {
            var latitude = @Model.Latitude;
            var longitude = @Model.Longitude; 
            var title = "@Model.Name";
            var workiMap = new WorkiMap('detailMap');
            workiMap.LoadDetailMap(latitude, longitude, title);
        }
    </script>