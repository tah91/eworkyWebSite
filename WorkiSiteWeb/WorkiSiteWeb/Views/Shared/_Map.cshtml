@model Worki.Data.Models.Localisation

    <div id="detailMap">
    </div>

    <script type="text/javascript">
        head.js("@MiscHelpers.jquery", function() {
            head.js("@MiscHelpers.jqueryui")
                .js("http://maps.google.com/maps/api/js?sensor=true&region=FR&callback=initialize", function () {
                    head.js("@Url.VersionedContent(Links.Scripts.WorkiMap_js)", function () {
                        var latitude = @Model.Latitude;
                        var longitude = @Model.Longitude; 
                        var title = "@Model.Name";
                        var workiMap = new WorkiMap('detailMap');
                        workiMap.LoadDetailMap(latitude, longitude, title);
                    });
            });
        });

        function initialize() {

        }
    </script>