@model System.Collections.Generic.IEnumerable<Localisation>

@if (Model.Count() != 0)
{
    foreach (var item in Model)
    {
        <div class="suggestion">
            <div class="suggestionImage borderRadius float-left">
		        <a href="@item.GetDetailFullUrl(Url)">
                    <img src="@ControllerHelpers.GetUserImagePath(item.GetMainPic(), true)" alt="@item.Name"/>
                </a>
            </div>
            <div class="suggestiondesc float-right">
                <a class="bold orange" href="@item.GetDetailFullUrl(Url)">@item.Name</a>
                <div class="clear"></div>
                @Html.TruncateAtWord(item.GetDescription(), 40)
            </div>
            <div class="clear"></div>
        </div>
    }
}
else
{
    <span class="italic">@Worki.Resources.Views.Localisation.LocalisationString.NoSuggestions</span>
}