@model System.Collections.Generic.IEnumerable<Localisation>

@if (Model.Count() != 0)
{
    foreach (var item in Model)
    {
        <div class="suggestion">
            <div class="float-left">
                <div class="suggestionImage borderRadius">
		            <a href="@item.GetDetailFullUrl(Url)">@RazorHelpers.CenterImage(ControllerHelpers.GetUserImagePath(item.GetMainPic(), true), item.Name)</a>
                </div>
            </div>
            <div class="suggestiondesc float-right">
                <a class="bold blue" href="@item.GetDetailFullUrl(Url)">@item.Name</a>
                <div class="clear"></div>
                @Html.TruncateAtWord(item.Description, 40)
            </div>
            <div class="clear"></div>
        </div>
    }
}
else
{
    <span class="italic">@Worki.Resources.Views.Localisation.LocalisationString.NoSuggestions</span>
}