@model Localisation

<div class="mapItemSummary">
    @{  
	    var link = Model.GetDetailFullUrl(Url);
	    var fullName = Model.GetFullName();
    }
    <div class="resultItemGallery float-left">
        @RazorHelpers.CenterImage(ControllerHelpers.GetUserImagePath(Model.GetMainPic(), true), Links.Content.images.no_image_png, fullName)
        <div class="ratingContainer margint5">
		    @RazorHelpers.ReadOnlyRating(Model.GetRatingAverage(RatingType.General))<span class="blue noUnderline"><a href="@(link + "#commentFormDiv")">@(string.Format("{0} {1}", Model.Comments.Count, Worki.Resources.Views.Search.SearchString.Opinion))</a></span>
		    <div class="clear">
		    </div> 
	    </div>
    </div>
    <div class="itemDetailsDiv float-left relative">
        <h3 class="bold blue noUnderline">
            <a href="@link" title="@fullName">@fullName</a>
        </h3>
        <div>
            <span class="bold orange">@Localisation.GetLocalisationType(Model.TypeValue)</span> - @Model.Adress&nbsp; - &nbsp;@Model.PostalCode @Model.City
        </div>
        <div class="margint5">
            @Html.TruncateAtWord(Model.GetDescription(), 160)
        </div>
        <div class="itemBottom bottom">
            <div class="float-left">
                @Html.Partial(MVC.Localisation.Views._IconeServices, Model)
            </div>
            <div class="float-right">
                <div class="itemPriceDisplay float-left bold orange">
				    @Model.GetMinPriceString()
			    </div>
                @if (Model.AcceptBooking())
                {                
			    <div class="buttonStd buttonBlue linkImg float-left">
                    <a href="@link">@Worki.Resources.Views.Localisation.LocalisationString.BookIt</a>
			    </div>
                }
                else
                { 
                <div class="buttonStd buttonBlue linkImg float-left">
                    <a href="@link">@Worki.Resources.Views.Localisation.LocalisationString.MoreDetails</a>
			    </div>
                }
                <div class="clear">
                </div>
            </div>
            <div class="clear">
            </div>
        </div>
    </div>
    <div class="clear">
    </div>
</div>