@model Worki.Data.Models.LocalisationFormViewModel

@helper DescritptionField(Worki.Infrastructure.Culture culture)
	{
		switch (culture)
		{
			case Worki.Infrastructure.Culture.es:
				{
					<div class="editor-field">
						@Html.TextAreaFor(model => model.Localisation.DescriptionEs, new { placeHolder = Model.IsSharedOffice ? Worki.Resources.Views.Localisation.LocalisationFormString.SharedOfficeDesc : "" })
