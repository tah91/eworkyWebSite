				}
				break;
			case Worki.Infrastructure.Culture.en:
				{
					<div class="editor-field">
						@Html.TextAreaFor(model => model.Localisation.DescriptionEn, new { placeHolder = Model.IsSharedOffice ? Worki.Resources.Views.Localisation.LocalisationFormString.SharedOfficeDesc : "" })
					</div>
				}
				break;
			case Worki.Infrastructure.Culture.fr:
