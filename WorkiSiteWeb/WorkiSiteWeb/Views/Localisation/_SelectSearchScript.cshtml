            @Html.FeatureChecboxLabel2(Feature.SafeStorage, model.LocalisationData)
            @Html.FeatureChecboxLabel2(Feature.Shower, model.LocalisationData)
            @Html.FeatureChecboxLabel2(Feature.Newspaper, model.LocalisationData)
