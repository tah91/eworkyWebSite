@model Worki.Data.Models.ResetPasswordModel

@section HeadContent
{
    <meta name="robots" content="noindex">
	<meta name="Description" content="@Worki.Resources.Views.Account.ResetMdpString.Description"/>
    <title>@Html.WorkiTitle(Worki.Resources.Models.Account.AccountModels.ResetThePassword)</title>
}

@RazorHelpers.TitleDiv(Worki.Resources.Models.Account.AccountModels.ResetThePassword, "Blue")

<div class="detailContent">
    <div class="blockContainer">
        @using (Html.BeginForm())
	    {
            <div class="contentBlock">
                <div class="loginDesc">
                    @Worki.Resources.Views.Account.AccountString.SetMailInscription
                </div>
                @Html.AntiForgeryToken()
                <div class="editor-field">
                    @Html.TextBoxFor(m => m.EMail) 
                </div>
            </div>
            <div class="float-right">
                <input type="submit" class="btn_blue imageBtn" value="Envoyer"/>
            </div>
            <div class="clear"></div>
        }
    </div>
</div>