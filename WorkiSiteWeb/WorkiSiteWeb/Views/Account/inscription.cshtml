@model WorkiSiteWeb.Models.RegisterModel

@section HeadContent
{
    <title>@Html.WorkiTitle(WorkiResources.Views.Account.AccountString.Inscription) </title>
    <link href="@Url.Content(Links.Content.jquery_ui_1_8_12_custom_css) " rel="stylesheet" type="text/css" />
}

    <div class="borderContainer">
        @RazorHelpers.TitleDiv(WorkiResources.Views.Account.AccountString.EWorkyRegister, "Blue")


        <div class="login-account">
            <div class="registerDesc float-right">
            @WorkiResources.Views.Account.AccountString.FillInscription<br />
            @WorkiResources.Views.Account.AccountString.QualityOfProfils<br /> 
            @WorkiResources.Views.Account.AccountString.SocialNetworkSoon<br /><br />
            @WorkiResources.Views.Account.AccountString.RequiredFields
            </div>
            <div class="clear">
            </div>

            @using (Html.BeginForm()) 
            { 
                @Html.AntiForgeryToken()
                <div class="registerForm">
                    <table>
                        <tr>
                            <td>
                                <div class="editor-label">
                                    @Html.LabelFor(m => m.MemberMainData.Profile) <span class="blue">*</span>
                                </div>
                            </td>
                            <td>
                                <div class="editor-field">
                                    @Html.DropDownList("MemberMainData.Profile", Model.ProfileSelectTypes, new { @class = "profileSelect" })
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="editor-label">
                                    @Html.LabelFor(m => m.MemberMainData.Civility)<span class="blue">*</span>
                                </div>
                            </td>
                            <td>
                                <div class="editor-field">
                                    @Html.DropDownList("Civility", Model.CivilitySelectTypes)
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="editor-label">
                                    @WorkiResources.Models.Contact.Contact.LastName<span class="blue">*</span>
                                </div>
                            </td>
                            <td>
                                <div class="editor-field">
                                    @Html.TextBoxFor(m => m.MemberMainData.LastName)
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="editor-label">
                                    @WorkiResources.Models.Contact.Contact.FirstName<span class="blue">*</span>
                                </div>
                            </td>
                            <td>
                                <div class="editor-field">
                                    @Html.TextBoxFor(m => m.MemberMainData.FirstName)
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="editor-label">
                                    @Html.LabelFor(m => m.Email)<span class="blue">*</span>
                                </div>
                            </td>
                            <td>
                                <div class="editor-field">
                                    @Html.TextBoxFor(m => m.Email)
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="editor-label">
                                    @Html.LabelFor(m => m.Password)<span class="blue">*</span>
                                </div>
                            </td>
                            <td>
                                <div class="editor-field">
                                    @Html.PasswordFor(m => m.Password) (@ViewData["PasswordLength"]  caractères min.)
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="editor-label">
                                    @Html.LabelFor(m => m.ConfirmPassword)<span class="blue">*</span>
                                </div>
                            </td>
                            <td>
                                <div class="editor-field">
                                    @Html.PasswordFor(m => m.ConfirmPassword)
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="editor-label">
                                    @WorkiResources.Views.Account.AccountString.EnterFollowingLetters
                                </div>
                            </td>
                            <td>
                                <div class="editor-field">
                                    @Html.Captcha("myCaptcha") 
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <div class="editor-label">
                                    @Html.Label(WorkiResources.Views.Account.AccountString.ValidationLetter)<span class="blue">*</span>
                                </div>
                            </td>
                            <td>
                                <div class="editor-field">
                                    @Html.TextBox("attempt") 
                                </div>
                            </td>
                        </tr>

                        <tr>
                            <td>
                                <div class="editor-label">
                                    
                                </div>
                            </td>
                            <td>
                                <div class="editor-field">
                                    @Html.CheckBoxFor(m => m.AcceptCGU)
                                    @Html.Raw(String.Format(WorkiResources.Views.Account.AccountString.AgreeWithCGU,  Html.ActionLink("CGU", MVC.Home.CGU())))
                                </div>
                            </td>
                        </tr>

                        <tr>
                            <td>
                            </td>
                            <td>
                                <div class="editor-field">
                                    <input type="submit" class="btn_blue imageBtn" value="S'inscrire"/>
                                </div>
                            </td>
                        </tr>
                    </table>                    
                </div>
            } 
        </div>
    </div>

@section ScriptContent
{
    <script src="@MiscHelpers.jquery " type="text/javascript"></script>
    <script src="@MiscHelpers.jqueryui " type="text/javascript"></script>
    @Html.Partial(MVC.Shared.Views._CufonScript)
    <script type="text/javascript">
    $(document).ready(function () {
        $.datepicker.regional['fr'] = {
            closeText: 'Fermer',
            prevText: '&#x3c;Préc',
            nextText: 'Suiv&#x3e;',
            currentText: 'Courant',
            monthNames: ['Janvier', 'Février', 'Mars', 'Avril', 'Mai', 'Juin','Juillet', 'Août', 'Septembre', 'Octobre', 'Novembre', 'Décembre'],
            monthNamesShort: ['Jan', 'Fév', 'Mar', 'Avr', 'Mai', 'Jun','Jul', 'Aoû', 'Sep', 'Oct', 'Nov', 'Déc'],
            dayNames: ['Dimanche', 'Lundi', 'Mardi', 'Mercredi', 'Jeudi', 'Vendredi', 'Samedi'],
            dayNamesShort: ['Dim', 'Lun', 'Mar', 'Mer', 'Jeu', 'Ven', 'Sam'],
            dayNamesMin: ['Di', 'Lu', 'Ma', 'Me', 'Je', 'Ve', 'Sa'],
            weekHeader: 'Sm',
            dateFormat: 'dd/mm/yy',
            firstDay: 1,
            isRTL: false,
            showMonthAfterYear: false,
            yearSuffix: ''
        };
        $.datepicker.setDefaults($.datepicker.regional['fr']);
        $("#datepicker").datepicker();
        $(".dp").datepicker({  
             changeMonth: true,  
             changeYear: true,
             yearRange: '1911:2000'
        });
     });
    </script>
}
