@model Worki.Data.Models.LogOnModel

@section HeadContent
{  
    <meta name="robots" content="noindex">
	<meta name="Description" content="@Worki.Resources.Views.Account.ConnexionString.Description"/>
    <title>@Html.WorkiTitle(Worki.Resources.Views.Account.AccountString.Login)</title>
    <link href="@Url.VersionedContent(Links.Content.Profil_min_css)" rel="stylesheet" type="text/css" />
}

@RazorHelpers.TitleDiv(Worki.Resources.Views.Account.AccountString.LoginToEWorky, "Blue")

<div class="detailContent">
    <div class="blockContainer">
    @using (Html.BeginForm())
    { 
        @Html.AntiForgeryToken()
        <span class="contentBlock float-left fb_left_block_connexion">
            <table>
                <tr>
                    <td>
                        <div class="editor-label">
                            @Html.LabelFor(m => m.Login) 
                        </div>
                    </td>
                    <td>
                        <div class="editor-field">
                            @Html.TextBoxFor(m => m.Login)
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.LabelFor(m => m.Password) 
                    </td>
                    <td>
                        @Html.PasswordFor(m => m.Password) &nbsp;
                        <span class="blue">@Html.ActionLink(Worki.Resources.Views.Account.AccountString.ForgottenPassword, MVC.Account.ResetPassword())</span>
                    </td>
                </tr>
                <tr>
                    <td>

                    </td>
                    <td>
                        <input type="submit" class="buttonStd buttonBlue" value="@Worki.Resources.Views.Shared.SharedString.LogIn"/>
                        &nbsp;&nbsp;@Worki.Resources.Views.Shared.SharedString.Or <span class="blue">@Html.ActionLink(Worki.Resources.Views.Account.AccountString.EWorkyRegister, MVC.Account.Register())</span>
                    </td>
                </tr>
            </table>
        </span>
        <span class="contentBlock float-right fb_right_block_connexion">
            <p>@Worki.Resources.Views.Shared.SharedString.FastLogonFb2</p>
            @RazorHelpers.FacebookLogon(Url.Action(MVC.Account.FacebookLogOn()), Worki.Resources.Views.Shared.SharedString.SignIn, "fb_button_logon")
        </span>
        <div class="clear"></div>
    }
    </div>
</div>