@model WorkiSiteWeb.Models.WelcomePeopleListViewModel

@section HeadContent
{
    <title>@Html.WorkiTitle(WorkiResources.Views.Admin.AdminString.Admin) </title>
    <link href="@Url.Content(Links.Content.Admin_css) " rel="stylesheet" type="text/css" />
}

<h2>@WorkiResources.Views.Admin.AdminString.IndexWelcomePeople</h2>
<div class="contentAdmin">
    <div id="adminMenu"> 
        @Html.Partial(MVC.Admin.Views._AdminMenu)
    </div>
    <p>
    <h3>@Html.ActionLink(WorkiResources.Views.Admin.AdminString.CreateNewWelcomePeople, MVC.Admin.CreateWelcomePeople())</h3>
    </p>
    <div class="adminPanel">
        @using (Html.BeginForm(MVC.Admin.ActionNames.UpdateMainLocalisation, MVC.Admin.Name, new { returnUrl = ViewContext.HttpContext.Request.Url.PathAndQuery }, FormMethod.Post, new { id = "adminForm" }))
        {
            @Html.AntiForgeryToken();
            <table>
                <thead>
                    <tr>
                        <th>
                            &nbsp;&nbsp; @WorkiResources.Views.Admin.AdminString.ID
                        </th> 
                        <th>
                            &nbsp;&nbsp; @WorkiResources.Models.Contact.Contact.Email
                        </th>
                        <th>
                            &nbsp;&nbsp; @WorkiResources.Views.Admin.AdminString.Action
                        </th>
                    </tr>
                </thead>
            <tbody>
            @foreach (var item in Model.WelcomePeople)
            {
                <tr>
                    <td align="center">
                        @item.Id
                    </td>
                    <td align="center">
                        @item.Member.Username
                    </td>
                    <td align="center">
                        @Html.ActionLink(WorkiResources.Views.Localisation.LocalisationString.Edit, MVC.Admin.EditWelcomePeople(item.Id)) |
                        @Html.ActionLink(WorkiResources.Views.Admin.AdminString.Delete, MVC.Admin.DeleteWelcomePeople(item.Id, ViewContext.HttpContext.Request.Url.PathAndQuery)) |
                        @Html.ActionLink(WorkiResources.Views.Localisation.LocalisationString.Details, MVC.Admin.DetailWelcomePeople(item.Id))
                    </td>
                </tr>
            }
            </tbody>
            <tfoot> </tfoot>
            </table>
            <div class="pager">
                @Html.PageLinks(Model.PagingInfo, x => Url.Action(MVC.Admin.ActionNames.IndexWelcomePeople, MVC.Admin.Name, new { page = x }))
            </div>
        }
        <div class="clear">
        </div>
    </div>
</div>
