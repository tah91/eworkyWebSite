@model Worki.Data.Models.ProfilDashboardModel

@{
	var tabId = (ProfilDashboardModel.DashboardTab)ViewData[ProfilDashboardModel.TabId];
	var a_class = tabId.ToString();
	List<Localisation> locs = new List<Localisation>();
	PagingInfo pi = new PagingInfo();
	if (tabId == ProfilDashboardModel.DashboardTab.FavLoc)
	{
		locs = Model.FavoriteLocalisations;
		pi = Model.FavoriteLocalisationsPI;
	}
	else if (tabId == ProfilDashboardModel.DashboardTab.AddedLoc)
	{
		locs = Model.AddedLocalisations;
		pi = Model.AddedLocalisationsPI;
	}
	
}

<ul>
    @foreach (var loc in locs.OrderByDescending(x => x.ID))
	{ 
        <li>
            <a href="@loc.GetDetailFullUrl(Url)">
                <div class="localisationTag float-left">
                    <div class="localisationImgDiv borderedImg">
					@RazorHelpers.CenterImage(ControllerHelpers.GetUserImagePath(loc.GetMainPic(), true), loc.Name)
                    </div>
                    <div class="localisationImgDesc">
                        <span class="bold">@loc.Name</span><br />
                        @loc.City
                    </div>                                   
                </div>
            </a>
        </li>
	}
</ul>
<div class="clear">
</div>
<div class="pager @(a_class)">
    @Html.PageLinks(pi, null, a_class)
</div>