@model Worki.Data.Models.ProfilDashboardModel

@{
	var tabId = (ProfilConstants.DashboardTab)ViewData[ProfilConstants.TabId];
	var a_class = tabId.ToString();
	List<Comment> comments = new List<Comment>();
	PagingInfo pi = new PagingInfo();
	if (tabId == ProfilConstants.DashboardTab.PostedCom)
	{
		comments = Model.PostedComments;
		pi = Model.PostedCommentsPI;
	}
	else if (tabId == ProfilConstants.DashboardTab.RelCom)
	{
		comments = Model.RelatedComments;
		pi = Model.RelatedCommentsPI;
	}
}

@foreach (var com in comments.OrderByDescending(x => x.ID))
{
    if (com.Member == null)
    {
        continue;
    }
	@Html.Partial(MVC.Shared.Views._LocalisationSingleComment, com, ViewData)
}
<div class="pager @(a_class)">
    @Html.PageLinks(pi, null, a_class)
</div>