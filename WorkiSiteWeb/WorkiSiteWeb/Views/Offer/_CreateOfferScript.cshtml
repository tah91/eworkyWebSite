<script type="text/javascript">
	var offer0 = '<div id="offerFeaturesForm"></div>';
	var offer1 = '@Html.JSEscape(BuisnessLoungeForm().ToString())';
	var offer2 = '@Html.JSEscape(WorkstationForm().ToString())';
	var offer3 = '@Html.JSEscape(DesktopForm().ToString())';
	var offer4 = '@Html.JSEscape(MeetingRoomForm().ToString())';
	var offer5 = '@Html.JSEscape(SeminarRoomForm().ToString())';
	var offer6 = '@Html.JSEscape(VisioRoomForm().ToString())';
	OfferFeatureFormReplace = function () {
		var currentOffer = jQuery.trim($("#Offer_Type").val());
		switch (currentOffer) {
			case "-1":
			case "0":
				newDivContent = offer0;
				break;
			case "1":
				newDivContent = offer1;
				break;
			case "2":
				newDivContent = offer2;
				break;
			case "3":
				newDivContent = offer3;
				break;
			case "4":
				newDivContent = offer4;
				break;
			case "5":
				newDivContent = offer5;
				break;
			case "6":
				newDivContent = offer6;
				break;
		}
		$("#offerFeaturesForm").replaceWith(newDivContent);
	}
	OfferFeatureFormReplace();
	$('#Offer_Type').change(function () {
		OfferFeatureFormReplace();
	});
</script>