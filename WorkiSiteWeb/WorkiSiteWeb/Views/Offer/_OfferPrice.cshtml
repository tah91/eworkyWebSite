@model OfferPrice
		   
@{
	var select = new SelectList(Offer.GetPaymentPeriodTypes(), "Key", "Value", Model.PriceType);
	var bciName = Url.IsSecuredUrl() ? "InnerModel.Offer.OfferPrices" : "Offer.OfferPrices";
}

<div class="offerPricesRow">
	@using (Html.BeginCollectionItem(bciName))
	{
		@Html.LabelFor(m => m.PriceType)
		@Html.DropDownListFor(m => m.PriceType, select)
		@Html.LabelFor(m => m.Price)
		@Html.TextBoxFor(m => m.Price)
		<button class="deleteRow crossButton cross"></button>
	}
</div>