@model Worki.Data.Models.Contact

@section HeadContent
{
    <link rel="canonical" href="@Url.ActionAbsolute(MVC.Home.Contact())"/>
	<meta name="Description" content="@Worki.Resources.Views.Home.ContactString.Description"/>
	<title>@Html.WorkiTitle(Worki.Resources.Views.Home.HomeString.Contact)</title>
}

@RazorHelpers.TitleDiv(Worki.Resources.Views.Home.HomeString.ContactUs, "Blue")

<div class="detailContent">
	<div class="blockContainer float-left">
		@Html.Partial(MVC.Home.Views._AboutMenu, AboutPages.Contact)
	</div>

    <div class="float-right generalTextContent blockContainer">
            @using (Html.BeginForm()) 
            {
                <div class="contentBlock">
                @Html.AntiForgeryToken()
                <table class="contactTable">
                    <tr>
                        <td>
                            <div class="editor-label">
                                @Html.LabelFor(model => model.LastName) <span class="blue">*</span>
                            </div>
                        </td>
                        <td>
                            <div class="editor-field">
                                @Html.TextBoxFor(model => model.LastName) 
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div class="editor-label">
                                @Html.LabelFor(model => model.FirstName)
                            </div>
                        </td>
                        <td>
                            <div class="editor-field">
                                @Html.TextBoxFor(model => model.FirstName)
                            </div>
                        </td>
                    </tr>
                    <tr> 
                        <td>
                            <div class="editor-label">
                                @Worki.Resources.Models.Contact.Contact.Email <span class="blue">*</span>
                            </div>
                        </td>
                        <td>
                            <div class="editor-field">
                                @Html.TextBoxFor(model => model.EMail)
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div class="editor-label">
                                @Html.LabelFor(model => model.Subject) <span class="blue">*</span>
                            </div>
                        </td>
                        <td>
                            <div class="editor-field">
                                @Html.TextBoxFor(model => model.Subject)
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td class="verticalAlignTop">
                            <div class="editor-label">
                                @Html.LabelFor(model => model.Message) <span class="blue">*</span>
                            </div>
                        </td>
                        <td>
                            <div class="editor-field">
                                @Html.TextAreaFor(model => model.Message)
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                        </td>
                        <td>
                            <div class="editor-field marginl5">
                                @Html.Captcha("myCaptcha") 
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <div class="editor-label">
                                @Html.Label(Worki.Resources.Views.Account.AccountString.ValidationLetter) <span class="blue">*</span>
                            </div>
                        </td>
                        <td>
                            <div class="editor-field">
                                @Html.TextBox("attempt") 
                            </div>
                        </td>
                    </tr>
                </table>
                </div>
                <div class="float-right">
                    <input type="submit" class="buttonStd buttonBlue margint10" value="@Worki.Resources.Views.Shared.SharedString.Send"/>
                </div>
                <div class="clear"></div>
            }
    </div>
	<div class="clear">
	</div>   
</div>