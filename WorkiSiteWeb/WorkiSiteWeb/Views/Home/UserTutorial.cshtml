@section HeadContent
{
	<meta name="Description" content="@Worki.Resources.Views.Home.ContactString.Description"/>
	<title>@Html.WorkiTitle(Worki.Resources.Views.Home.HowItWorksString.UserTutorial)</title>
}

<div class="detailContent">
	<div class="blockContainer float-left contentLeft">
		@Html.Partial(MVC.Home.Views._HowItWorksMenu, TutorialPages.UserTutorial)
	</div>

    <div class="float-left blockContainer contentRight">
		<div class="contentBlock howitWorks">
			<h1 class="howitWorksHeader borderRadius">@Worki.Resources.Views.Home.HowItWorksString.HowDoIt</h1>

			<ul class="howitWorksTuto">
				<li class="float-left">
					<h2 class="blue">1. @Worki.Resources.Views.Home.HowItWorksString.RegisterUserTitle</h2>
					<div class="howitworksLogo hiw_Register float-left">
					</div>
					<div class="hoitworksDesc float-right">
						@Html.Raw(string.Format(Worki.Resources.Views.Home.HowItWorksString.RegisterUser, Html.ActionLink(Worki.Resources.Views.Home.HowItWorksString.RegisterLink, MVC.Account.Register())))
					</div>
					<div class="clear">
					</div>
				</li>
				<li class="float-right">
					<h2 class="blue">2. @Worki.Resources.Views.Home.HowItWorksString.SearchUserTitle</h2>
					<div class="howitworksLogo hiw_Search float-left">
					</div>
					<div class="hoitworksDesc float-right">
						@Worki.Resources.Views.Home.HowItWorksString.SearchUser
					</div>
					<div class="clear">
					</div>
				</li>
				<li class="clear">
				</li> 
				<li class="float-left">
					<h2 class="blue">3. @Worki.Resources.Views.Home.HowItWorksString.BookUserTitle</h2>
					<div class="howitworksLogo hiw_Book float-left">
					</div>
					<div class="hoitworksDesc float-right">
						@Worki.Resources.Views.Home.HowItWorksString.BookUser
					</div>
					<div class="clear">
					</div>
				</li>
				<li class="float-right">
					<h2 class="blue">4. @Worki.Resources.Views.Home.HowItWorksString.PayTitle</h2>
					<div class="howitworksLogo hiw_Pay float-left">
					</div>
					<div class="hoitworksDesc float-right">
						@Worki.Resources.Views.Home.HowItWorksString.Pay
					</div>
					<div class="clear">
					</div>
				</li>
				<li class="clear">
				</li> 
			</ul>
		</div>
    </div>
	<div class="clear">
	</div>   
</div>