@model IEnumerable<BlogPost>

<div class="blogSummary float-left" id="blog_slides">
    <div class="blog_slides_container">
        <a href="@Url.Action(MVC.Home.Press())" target="_blank">
            <div class="blogItem"> 
                <span class="bold blue">@Worki.Resources.Views.Home.PresseString.OnJT</span>
                <div class="blogContent">
                    <img  class="float-left" src="@Links.Content.images.vu_tele_png"  alt="@Worki.Resources.Views.Home.PresseString.OnJT"/>
                    <p>
                        @Worki.Resources.Views.Home.PresseString.VideoDesc
                    </p>
                </div>
                <div class="clear">
                </div>
            </div> 
        </a>
    @foreach (var item in Model)
    {
        <a href="@item.Url" target="_blank">
            <div class="blogItem"> 
                <span class="bold blue">@item.Title</span> (@item.PublicationDate.ToString("dd/MM/yyyy"))
                <div class="blogContent">
                    <img  class="float-left" src="@item.Image"  alt="@item.Title"/>
                    <p>
                        @item.Content <span class="italic">... (lire la suite)</span>
                    </p>
                </div>
                <div class="clear">
                </div>
            </div> 
        </a>
    }
    </div>
</div>