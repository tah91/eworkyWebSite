@section HeadContent
{
    <link rel="canonical" href="@Url.ActionAbsolute(MVC.Home.Legal())"/>
	<meta name="Description" content="@Worki.Resources.Views.Home.MentionLegaleString.Description"/>
    <title>@Html.WorkiTitle(Worki.Resources.Views.Home.HomeString.Imprint)</title>
}

@RazorHelpers.TitleDiv(Worki.Resources.Views.Home.HomeString.Imprint, "Blue")
<div class="detailContent generalTextContainer">
	<div class="blockContainer float-left">
		@Html.Partial(MVC.Home.Views._AboutMenu, AboutPages.Legal)
	</div>

	<div class="float-right generalTextContent blockContainer">
		<div class="contentBlock">
			<p>
				@Html.Raw(String.Format(Worki.Resources.Views.Home.HomeString.ImprintDescription, MiscHelpers.EmailConstants.ContactMail))
			</p>
		</div>
	</div>
    <div class="clear">
	</div>
</div>