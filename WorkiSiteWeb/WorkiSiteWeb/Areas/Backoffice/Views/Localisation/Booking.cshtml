@model LocalisationBookingViewModel

@section HeadContent
{
	<title>@Html.WorkiTitle(Worki.Resources.Menu.Menu.CurrentBookings)</title>
	<link href="@Url.VersionedContent(Links.Content.Dashboard_min_css)" rel="stylesheet" type="text/css" />
}

<div class="float-left">
    @RazorHelpers.TitleDiv(string.Format(Worki.Resources.Views.BackOffice.BackOfficeString.ManagementTitle, Model.Localisation.Name), "Blue")
</div>
<div class="float-right bold margint15">
    @Html.ActionLink(Worki.Resources.Views.BackOffice.BackOfficeString.BackToOwnerSpace, MVC.Backoffice.Home.Index(), new { @class = "blue" })
</div>
<div class="clear"></div>
<!--@Html.Partial(MVC.Backoffice.Localisation.Views._LocalisationNavigation, new LocalisationNavigation { Localisation = Model.Localisation })-->
@Html.Partial(MVC.Backoffice.Localisation.Views._LocalisationMenu, new LocalisationMenuIndex { MenuItem = LocalisationMenu.Home, Id = Model.Localisation.ID })

<div class="detailContent">

	<div class="blockContainer float-left contentLeft">
		@Html.Partial(MVC.Shared.Views._VerticalMenu, new List<MenuItem> 
		{ 
			new MenuItem{ Link= Html.ActionLink(Worki.Resources.Menu.Menu.BONews, MVC.Backoffice.Localisation.Index(Model.Localisation.ID))} ,
			new MenuItem{ Selected = true, Link= Html.ActionLink(Worki.Resources.Menu.Menu.CurrentBookings, MVC.Backoffice.Localisation.Booking(Model.Localisation.ID))} ,
			new MenuItem{ Link= Html.ActionLink(Worki.Resources.Menu.Menu.Quoations, MVC.Backoffice.Localisation.Quotation(Model.Localisation.ID))}
		})
	</div>

	<div class="blockContainer float-left contentRight">
        <div class="contentBlock">
            @Html.Partial(MVC.Backoffice.Shared.Views._BookingList, new BookingListViewModel { Bookings = Model.Bookings, Title = Model.Localisation.Name })
        </div>
	</div>
	<div class="clear">
	</div>
</div>