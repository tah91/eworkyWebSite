@model LocalisationQuotationViewModel

@section HeadContent
{
	<title>@Html.WorkiTitle(Worki.Resources.Menu.Menu.Quoations)</title>
	<link href="@Url.VersionedContent(Links.Content.Dashboard_min_css)" rel="stylesheet" type="text/css" />
}

@Html.Partial(MVC.Backoffice.Localisation.Views._LocalisationNavigation, new LocalisationNavigation { Localisation = Model.Localisation })
@Html.Partial(MVC.Backoffice.Localisation.Views._LocalisationMenu, new LocalisationMenuIndex { MenuItem = LocalisationMenu.Home, Id = Model.Localisation.ID })

<div class="detailContent">

	<div class="blockContainer float-left contentLeft">
		@Html.Partial(MVC.Shared.Views._VerticalMenu, new List<MenuItem> 
		{ 
			new MenuItem{ Link= Html.ActionLink(Worki.Resources.Menu.Menu.News, MVC.Backoffice.Localisation.Index(Model.Localisation.ID))} ,
			new MenuItem{ Link= Html.ActionLink(Worki.Resources.Menu.Menu.CurrentBookings, MVC.Backoffice.Localisation.Booking(Model.Localisation.ID))} ,
			new MenuItem{ Selected = true, Link= Html.ActionLink(Worki.Resources.Menu.Menu.Quoations, MVC.Backoffice.Localisation.Quotation(Model.Localisation.ID))}
		})
	</div>

	<div class="blockContainer float-left contentRight">
        @if (Model.Quotations.List.Count != 0)
        {
            <ul>
            @foreach (var quotation in Model.Quotations.List)
            {
                @Html.Partial(MVC.Backoffice.Shared.Views._QuotationItem, quotation)
            }
            </ul>
            <div class="pager">
                @Html.PageLinks(Model.Quotations.PagingInfo, x => Url.Action(MVC.Backoffice.Localisation.Quotation(Model.Localisation.ID, x)))
            </div>
        }
        else
        {
        <div class="contentBlock italic">
            @Html.Raw(string.Format(Worki.Resources.Views.Profile.ProfileString.AddedSpacesEmpy, Html.ActionLink(Worki.Resources.Views.Home.FaqString.ClickHere, MVC.Home.AddSpace())))
        </div>
        }
	</div>
	<div class="clear">
	</div>
</div>