@model PagingList<MemberQuotation>

@section HeadContent
{
	<title>@Html.WorkiTitle(Worki.Resources.Menu.Menu.Quoations)</title>
	<link href="@Url.VersionedContent(Links.Content.Dashboard_min_css)" rel="stylesheet" type="text/css" />
}

@Html.Partial(MVC.Backoffice.Shared.Views._BackofficeMenu, BackofficeMenu.Home)

<div class="detailContent">

	<div class="blockContainer float-left contentLeft">
		@Html.Partial(MVC.Shared.Views._VerticalMenu, new List<MenuItem> 
		{ 
			new MenuItem{ Link= Html.ActionLink(Worki.Resources.Menu.Menu.BONews, MVC.Backoffice.Home.Index())} ,
			new MenuItem{ Link= Html.ActionLink(Worki.Resources.Menu.Menu.Places, MVC.Backoffice.Home.Localisations())} ,
			new MenuItem{ Link= Html.ActionLink(Worki.Resources.Menu.Menu.CurrentBookings, MVC.Backoffice.Home.Booking())} ,
			new MenuItem{ Selected = true, Link= Html.ActionLink(Worki.Resources.Menu.Menu.Quoations, MVC.Backoffice.Home.Quotation())}
		})
	</div>

	<div class="blockContainer float-left contentRight">
    		@if (Model.List.Count != 0)
            {
                <ul>
                @foreach (var quotation in Model.List)
                {
                    @Html.Partial(MVC.Backoffice.Shared.Views._QuotationItem, quotation)
                }
                </ul>
                <div class="pager">
                    @Html.PageLinks(Model.PagingInfo, x => Url.Action(MVC.Backoffice.Home.Quotation(x)))
                </div>
            }
            else
            {
                <div class="contentBlock">
                    <div class="emptyContent italic">
                        @Html.Raw(string.Format(Worki.Resources.Views.BackOffice.BackOfficeString.NoWorkingQuotation, Html.ActionLink(Worki.Resources.Views.BackOffice.BackOfficeString.Offers, MVC.Backoffice.Home.Localisations())))
                    </div>
                </div>
            }
	</div>
	<div class="clear"></div>
</div>