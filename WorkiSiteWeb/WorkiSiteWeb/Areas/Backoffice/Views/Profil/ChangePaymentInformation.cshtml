@model Worki.Data.Models.PaymentInfoModel

@section HeadContent
{  
    <meta name="robots" content="noindex">
    <title>@Html.WorkiTitle(Worki.Resources.Models.Account.AccountModels.ChangeThePassword)</title>
	<link href="@Url.VersionedContent(Links.Content.Dashboard_min_css)" rel="stylesheet" type="text/css" />
}

@RazorHelpers.TitleDiv(Worki.Resources.Views.BackOffice.BackOfficeString.OwnerSpace, "Blue")
@Html.Partial(MVC.Backoffice.Shared.Views._BackofficeMenu, BackofficeMenu.Profil)

<div class="detailContent">
	<div class="blockContainer float-left contentLeft">
		@Html.Partial(MVC.Shared.Views._VerticalMenu, new List<MenuItem> 
		{/*
			new MenuItem{ Link= Html.ActionLink(Worki.Resources.Menu.Menu.EditProfil, MVC.Backoffice.Profil.Edit())} ,
			new MenuItem{ Link= Html.ActionLink(Worki.Resources.Menu.Menu.EditPassword, MVC.Backoffice.Profil.ChangePassword())} ,*/
            new MenuItem{ Selected = true, Link= Html.ActionLink(Worki.Resources.Menu.Menu.ModifyPayement, MVC.Backoffice.Profil.ChangePaymentInformation())} 
		})
	</div>
	
    <div class="contentRight blockContainer float-right">
        @using (Html.BeginForm())
	    {
            <div class="contentBlock">
                <div class="loginDesc marginb10">
                    @Html.Raw(string.Format(Worki.Resources.Views.Profile.ProfileString.HeadModifyPayment, MiscHelpers.UrlConstants.paypal))<br />
                </div>
                @Html.AntiForgeryToken()
           
                <table class="confirmbooktable">
                    <tr>
                        <td>
                            @Worki.Resources.Views.Profile.ProfileString.MailPayment <span class="blue">*</span>
                        </td>
                        <td>
                            : @Html.TextBoxFor(m => m.PaymentAddress)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Worki.Resources.Views.Profile.ProfileString.PasswordEworky <span class="blue">*</span>
                        </td>
                        <td>
                            : @Html.PasswordFor(m => m.WorkiPassword)
                        </td>
                    </tr>
                </table>
                <div class="margint10">
                    @Worki.Resources.Views.Profile.ProfileString.EndModifyPayment
                </div>
            </div>
            <div class="float-right">
                <input type="submit" class="buttonStd buttonBlue" value="@Worki.Resources.Views.Shared.SharedString.Modify"/>
            </div>
            <div class="clear"></div>
        }
    </div>
	<div class="clear"></div>
</div>