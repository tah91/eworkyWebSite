@model Worki.Data.Models.WelcomePeople

@section HeadContent
{
    <title>@Html.WorkiTitle(Worki.Resources.Views.Admin.AdminString.Admin) </title>
    <link href="@Url.VersionedContent(Links.Content.Admin_min_css)" rel="stylesheet" type="text/css" />
}

@RazorHelpers.TitleDiv(Worki.Resources.Views.Admin.AdminString.DetailWelcomePeople, "Blue")

<div class="detailContent">
    <div class="blockContainer">
        <div class="contentBlock">
        <table>
            <tr>
                <td>
                    <div class="editor-label">
                        @Worki.Resources.Views.Admin.AdminString.Email
                    </div>
                </td>
                <td>
                    <div class="editor-field">
                        &nbsp;&nbsp;&nbsp;@Html.DisplayFor(model => model.Member.Username)
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="editor-label">
                        @Worki.Resources.Views.Admin.AdminString.ExactLoc
                    </div>
                </td>
                <td>
                    <div class="editor-field">
                        &nbsp;&nbsp;&nbsp;@Html.DisplayFor(model => model.Localisation.Name)
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="editor-label">
                        @Worki.Resources.Views.Admin.AdminString.Description
                    </div>
                </td>
                <td>
                    <div class="editor-field">
                        &nbsp;&nbsp;&nbsp;@Html.DisplayFor(model => model.Description)
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="editor-label">
                        @Worki.Resources.Views.Admin.AdminString.LocalisationPicture
                    </div>
                </td>
                <td>
                    <div class="editor-field">
                        &nbsp;&nbsp;&nbsp;<img class="welcomePeopleMaxSize" src="@ControllerHelpers.GetUserImagePath(Model.LocalisationPicture)" alt="plop"/>
                    </div>
                </td>
            </tr>
        </table>
        </div>
    </div>   
</div>

<div>
    @Html.ActionLink(@Worki.Resources.Views.Admin.AdminString.Edit, MVC.Admin.Activity.EditWelcomePeople(Model.Id)) |
    @Html.ActionLink(@Worki.Resources.Views.Admin.AdminString.BackToList, MVC.Admin.Activity.IndexWelcomePeople())
</div>
