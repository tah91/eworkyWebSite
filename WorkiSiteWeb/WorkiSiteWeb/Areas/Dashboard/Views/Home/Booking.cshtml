@model PagingList<MemberBooking>

@section HeadContent
{
	<title>@Html.WorkiTitle(Worki.Resources.Menu.Menu.WorkingBook)</title>
	<link href="@Url.VersionedContent(Links.Content.Dashboard_min_css)" rel="stylesheet" type="text/css" />
}

@Html.Partial(MVC.Dashboard.Shared.Views._DashboardMenu, DashboardMenu.Home)

<div class="detailContent">

	<div class="blockContainer float-left contentLeft">
		@Html.Partial(MVC.Shared.Views._VerticalMenu, new List<MenuItem> 
		{ 
            new MenuItem{ Link= Html.ActionLink(Worki.Resources.Menu.Menu.News, MVC.Dashboard.Home.Index())} ,
			new MenuItem{ Selected = true, Link= Html.ActionLink(Worki.Resources.Menu.Menu.Bookings, MVC.Dashboard.Home.Booking())} ,
            new MenuItem{ Link= Html.ActionLink(Worki.Resources.Menu.Menu.Quoations, MVC.Dashboard.Home.Quotation())}
		})
	</div>

	<div class="blockContainer float-left contentRight">
		@if (Model.List.Count != 0)
        {
            <ul>
            @foreach (var booking in Model.List)
            {
                @Html.Partial(MVC.Dashboard.Shared.Views._BookingItem, booking)
            }
            </ul>
            <div class="pager">
                @Html.PageLinks(Model.PagingInfo, x => Url.Action(MVC.Dashboard.Home.Booking(x)))
            </div>
        }
        else
        {
            <div class="contentBlock italic">
                @Html.Raw(string.Format(Worki.Resources.Views.BackOffice.BackOfficeString.NoCurrentBooking, Html.ActionLink(Worki.Resources.Views.BackOffice.BackOfficeString.Historic, MVC.Dashboard.Historic.Booking())))
            </div>
        }
	</div>
	<div class="clear"></div>
</div>