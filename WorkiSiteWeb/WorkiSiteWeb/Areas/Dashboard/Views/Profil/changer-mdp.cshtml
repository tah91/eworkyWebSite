@model Worki.Data.Models.ChangePasswordModel

@section HeadContent
{  
    <meta name="robots" content="noindex">
    <title>@Html.WorkiTitle(Worki.Resources.Models.Account.AccountModels.ChangeThePassword)</title>
	<link href="@Url.VersionedContent(Links.Content.Profil_min_css)" rel="stylesheet" type="text/css" />
}

@Html.Partial(MVC.Shared.Views._HorizontalMenu, new List<MenuItem> 
	{ 
		new MenuItem{ Link= Html.ActionLink(Worki.Resources.Menu.Menu.Home, MVC.Dashboard.Home.Index())} ,
		new MenuItem{ Link= Html.ActionLink(Worki.Resources.Menu.Menu.Community, MVC.Dashboard.Community.Places())} ,
		new MenuItem{ Link= Html.ActionLink(Worki.Resources.Menu.Menu.Historic, MVC.Dashboard.Historic.Index())} ,
		new MenuItem{ Selected = true, Link= Html.ActionLink(Worki.Resources.Menu.Menu.Profil, MVC.Dashboard.Profil.Edit())} 
	})

<div class="detailContent">
	<div class="blockContainer float-left profilDetailLeft">
		@Html.Partial(MVC.Shared.Views._VerticalMenu, new List<MenuItem> 
		{ 
			new MenuItem{ Link= Html.ActionLink(Worki.Resources.Menu.Menu.EditProfil, MVC.Dashboard.Profil.Edit())} ,
			new MenuItem{ Selected = true, Link= Html.ActionLink(Worki.Resources.Menu.Menu.EditPassword, MVC.Dashboard.Profil.ChangePassword())} 
		})
	</div>
	
    <div class="profilDetailRight blockContainer float-right">
        @using (Html.BeginForm())
	    {
            <div class="contentBlock">
                <div class="loginDesc">
                    @Worki.Resources.Views.Account.AccountString.NewOldPassword<br />
                    @String.Format(Worki.Resources.Views.Account.AccountString.MinimumLength, ViewData["PasswordLength"])
                </div>
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.MemberId)
           
                <div class="editor-label">
                    @Html.LabelFor(m => m.OldPassword) 
                </div>
                <div class="editor-field">
                    @Html.PasswordFor(m => m.OldPassword) 
                </div>
                
                <div class="editor-label">
                    @Html.LabelFor(m => m.NewPassword) 
                </div>
                <div class="editor-field">
                    @Html.PasswordFor(m => m.NewPassword) 
                </div>
                
                <div class="editor-label">
                    @Html.LabelFor(m => m.ConfirmPassword) 
                </div>
                <div class="editor-field">
                    @Html.PasswordFor(m => m.ConfirmPassword) 
                </div>
            </div>
            <div class="float-right">
                <input type="submit" class="buttonStd buttonBlue" value="@Worki.Resources.Views.Shared.SharedString.Modify"/>
            </div>
            <div class="clear"></div>
        }
    </div>

	<div class="clear">
	</div>
</div>