@model PagingList<Localisation>

@section HeadContent
{
	<title>@Html.WorkiTitle(Worki.Resources.Menu.Menu.Places)</title>
	<link href="@Url.VersionedContent(Links.Content.Profil_min_css)" rel="stylesheet" type="text/css" />
}

@Html.Partial(MVC.Dashboard.Shared.Views._DashboardMenu, DashboardMenu.Community)

<div class="detailContent">

	<div class="blockContainer float-left profilDetailLeft">
		@Html.Partial(MVC.Shared.Views._VerticalMenu, new List<MenuItem> 
		{ 
			new MenuItem{ Selected = true, Link= Html.ActionLink(Worki.Resources.Menu.Menu.Places, MVC.Dashboard.Community.Places())} ,
			new MenuItem{ Link= Html.ActionLink(Worki.Resources.Menu.Menu.FavoritePlaces, MVC.Dashboard.Community.FavoritePlaces())} ,
			new MenuItem{ Link= Html.ActionLink(Worki.Resources.Menu.Menu.AddedPlaces, MVC.Dashboard.Community.AddedPlaces())},
			new MenuItem{ Link= Html.ActionLink(Worki.Resources.Menu.Menu.CommentedPlaces, MVC.Dashboard.Community.CommentedPlaces())} 
		})
	</div>

	<div class="blockContainer float-left profilDetailRight">
		<div class="contentBlock">
			@if (Model.List.Count != 0)
            {
				@Html.Partial(MVC.Dashboard.Shared.Views._LocalisationTab)
            }
            else
            {
            <span class="italic">@Html.Raw(string.Format(Worki.Resources.Views.Profile.ProfileString.AddedSpacesEmpy, Html.ActionLink(Worki.Resources.Views.Home.FaqString.ClickHere, MVC.Home.AddSpace())))</span>
            }
		</div>
	</div>
	<div class="clear">
	</div>
</div>