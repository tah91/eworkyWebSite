@model Worki.Data.Models.LogOnModel
       
<h3 class="blue">Connectez-vous</h3>	    
@using (Html.BeginForm(MVC.Mobile.Account.ActionNames.LogOn, MVC.Mobile.Account.Name, FormMethod.Post, new { id = "connexionform" }))
{ 
    @Html.AntiForgeryToken()
    <div class="editor-field">
        @Html.TextBoxFor(m => m.Login, new {placeholder = Worki.Resources.Models.Account.AccountModels.Login })
    </div>
	<div class="editor-field">
        @Html.PasswordFor(m => m.Password, new { placeholder = Worki.Resources.Models.Account.AccountModels.Password })
	</div>
    <input type="submit" class="button" value="Se connecter"/>
}